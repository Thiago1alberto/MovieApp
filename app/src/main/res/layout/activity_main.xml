<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:id="@+id/top_bar"
          android:background="@color/dark_blue">

      <ImageView
          android:layout_width="100dp"
          android:layout_height="match_parent"
          android:padding="10dp"
            android:src="@drawable/ic_tmdb_icon"
          />
      <ImageView
          android:id="@+id/button_to_search"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:layout_marginStart="272dp"
          android:layout_marginTop="12dp"
          android:src="@drawable/ic_baseline_search_24"
          android:clickable="true"
          android:focusable="true" />

      </LinearLayout>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_below="@id/top_bar"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <TextView
                    android:id="@+id/id_text_popular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/banner"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="24dp"
                    android:text="@string/populares_text"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <com.jackandphantom.carouselrecyclerview.CarouselRecyclerview
                    android:id="@+id/popularCarouselRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:layout_below="@id/id_text_popular"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp" />
                <TextView
                    android:id="@+id/id_text_free"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/freeForWatch_text"
                    android:textSize="24sp"
                    android:paddingStart="24dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:layout_below="@id/popularCarouselRecyclerView"

                    />
                <com.jackandphantom.carouselrecyclerview.CarouselRecyclerview
                    android:id="@+id/freeWatchCarouselRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:layout_margin="10dp"
                    android:layout_below="@id/id_text_free"
                    />
                <TextView
                    android:id="@+id/lastTrailers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lastTrailers_text"
                    android:textSize="24sp"
                    android:paddingStart="24dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:layout_below="@id/freeWatchCarouselRecyclerView"

                    />

                <com.jackandphantom.carouselrecyclerview.CarouselRecyclerview
                    android:id="@+id/lastTrailersCarouselRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:layout_below="@id/lastTrailers"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp" />

            </RelativeLayout>

        </ScrollView>




</RelativeLayout>